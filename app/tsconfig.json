{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "client/**/*.ts",
        "server/**/*.ts",
        "typings/**/*.d.ts"
    ]
}